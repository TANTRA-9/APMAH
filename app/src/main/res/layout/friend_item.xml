<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="5dp"
    android:background="@drawable/image_backgroung">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/frndItem_ImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/dp"/>

        <RelativeLayout
            android:id="@+id/fnrdItem_TextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/frndItem_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@id/frndItem_Name"
                android:id="@+id/frndItem_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="15dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>