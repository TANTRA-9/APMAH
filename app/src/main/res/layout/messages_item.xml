<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="5dp"
    android:background="@drawable/image_backgroung">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/msgItem_ImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dp"/>

        <RelativeLayout
            android:id="@+id/msgItem_TextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/msgItem_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@id/msgItem_Name"
                android:id="@+id/msgItem_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/msgItem_Status"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/msgItem_AcceptButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Accept"
                    android:textColor="#ffffff"
                    android:background="@drawable/custom_button"/>

                <Button
                    android:id="@+id/msgItem_DeclineButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Decline"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/decline_button"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>