<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Messages.MainMessages">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/MainMessages_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF03A9F4">
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@+id/MainMessages_toolbar"
        android:id="@+id/MainMessages_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F0FFFF"
        app:tabIndicatorColor="#FF03A9F4">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/MainMessages_tabLayout"
        android:id="@+id/MainMessages_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>