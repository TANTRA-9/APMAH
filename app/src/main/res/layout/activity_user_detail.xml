<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Register.UserDetail">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userDetail_ImageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/userDetail_ImageView"
        android:id="@+id/userDetail_Field1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:hint="Name"
        android:textColorHint="#000000"
        app:boxStrokeColor="#FF03A9F4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userDetail_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            android:textColorHighlight="#FF03A9F4"
            android:textColorHint="#FF03A9F4"
            android:textColorLink="@color/design_default_color_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/userDetail_Field1"
        android:id="@+id/userDetail_Field2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:hint="User Status"
        android:textColorHint="#000000"
        app:boxStrokeColor="#FF03A9F4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userDetail_Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            android:textColorHighlight="#FF03A9F4"
            android:textColorHint="#FF03A9F4"
            android:textColorLink="@color/design_default_color_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_below="@id/userDetail_Field2"
        android:id="@+id/userDetail_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Save"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>